# KPCL Credentials
KPCL_USERNAME=your_kpcl_username
KPCL_PASSWORD=your_kpcl_password

# Application Settings
FLASK_ENV=production
SECRET_KEY=your_secret_key_here_generate_strong_key
PORT=5001
HOST=0.0.0.0

# Browser Settings
BROWSER=chrome
HEADLESS=true
TIMEOUT=60

# Selenium Settings
SELENIUM_TIMEOUT=60
SELENIUM_IMPLICIT_WAIT=30
SELENIUM_PAGE_LOAD_TIMEOUT=60

# Scheduling Settings
SCHEDULE_TIME=07:00:01
SCHEDULE_TIMEZONE=Asia/Kolkata
MAX_RETRIES=3
RETRY_INTERVAL=10

# Logging Settings
LOG_LEVEL=INFO
LOG_DIR=logs
SCREENSHOT_DIR=screenshots

# AWS Settings (for EC2 deployment)
AWS_REGION=us-east-1

# Security Settings
SESSION_TIMEOUT=3600
CSRF_TOKEN_TIMEOUT=1800
